/*Animaciones y estilos para el divisor de viento*/
.wind-divider {
  width: 100%;           
  margin: 0 auto 24px auto; 
  overflow: hidden;
  background: transparent;
  z-index: 2;
}
.wind-divider svg {
  display: block;
  width: 100%;
  height: 64px;
  max-width: 100%;
}
.wind-path-divider {
  stroke-dasharray: 1920;
  stroke-dashoffset: 1920;
  animation: viento-divider-move 3s linear infinite;
}

.wind-light1 {
  animation-delay: 0.7s;
}
.wind-light2 {
  animation-delay: 1.4s;
}
.wind-reverse {
  animation: viento-divider-move-reverse 6s linear infinite !important;
}
@keyframes viento-divider-move {
  0% { stroke-dashoffset: 1920; }
  100% { stroke-dashoffset: -1920; }
}


.wind-divider-vertical {
  height: 100vh; /* O la altura que necesites para tu contenedor vertical */
  width: 64px;   /* El ancho de tu "divisor" vertical */
  margin: 0 24px auto 0; /* Ajusta el margen para la disposici√≥n vertical */
  overflow: hidden;
  background: transparent;
  z-index: 2;
  /* Si deseas centrarlo verticalmente o posicionarlo de alguna forma,
  puedes usar flexbox o grid en el padre de .wind-divider-vertical */
}

.wind-divider-vertical svg {
  display: block;
  width: 100%;
  height: 100%; /* El SVG ahora ocupa el 100% de la altura de su contenedor */
  max-height: 100%;
}

.wind-path-divider {
  /* La longitud total de la ruta ahora es 1920 (la altura del viewBox vertical) */
  stroke-dasharray: 1920; 
  stroke-dashoffset: 1920;
  animation: viento-divider-move-vertical 3s linear infinite; /* Nueva animaci√≥n */
}

.wind-light1 {
  animation-delay: 0.7s;
}
.wind-light2 {
  animation-delay: 1.4s;
}
.wind-reverse {
  animation: viento-divider-move-reverse-vertical 6s linear infinite !important; /* Nueva animaci√≥n inversa */
}

/* Nueva animaci√≥n para movimiento vertical */
@keyframes viento-divider-move-vertical {
  0% { stroke-dashoffset: 1920; }
  100% { stroke-dashoffset: -1920; }
}

/* Nueva animaci√≥n inversa para movimiento vertical */
@keyframes viento-divider-move-reverse-vertical {
  0% { stroke-dashoffset: -1920; } /* Ajusta el inicio para la direcci√≥n inversa vertical */
  100% { stroke-dashoffset: 1920; } /* Ajusta el fin para la direcci√≥n inversa vertical */
}

